# QuickDesk Environment Configuration (.env file)

# Database Configuration
DATABASE_URL=sqlite:///quickdesk.db
# For PostgreSQL: postgresql://user:password@localhost/quickdesk
# For MySQL: mysql://user:password@localhost/quickdesk

# JWT & Security
SECRET_KEY=your-super-secret-key-change-in-production-123456789
JWT_EXPIRATION_HOURS=24

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Email Configuration (optional)
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=

# Application Configuration
DEBUG=true
PORT=5000

# Production Settings (for deployment)
# FLASK_ENV=production
# DEBUG=false